<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductView">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loadingproductinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/wave"/>


    <ScrollView
        android:visibility="gone"
        android:id="@+id/productView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                app:srcCompat="@drawable/bgbutton" />
            <TextView
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:id="@+id/txtName"
                android:text="asas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp"/>
            <LinearLayout
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textStyle="bold"
                    android:text="asdasd"
                    android:textAlignment="center"
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textColor="#000000"/>
                <TextView
                    android:gravity="center"
                    android:text="asdasd"
                    android:textAlignment="center"
                    android:id="@+id/txtMRP"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />
                <TextView
                    android:gravity="center"
                    android:text="asdasd"
                    android:textAlignment="center"
                    android:id="@+id/txtDiscount"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/colorPrimaryDark"/>

                <RatingBar
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:numStars="5"
                    android:id="@+id/productRating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="(49)"
                    android:textColor="@color/colorAccent"
                    android:textAlignment="center"
                    android:id="@+id/productRatingCount"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />

                <TextView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="(49)"
                    android:textColor="@color/colorAccent"
                    android:textAlignment="center"
                    android:id="@+id/productTotalRatings"
                    android:layout_marginLeft="@dimen/_2sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:textSize="18sp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1C1C1C"
                android:text="Description"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:textSize="15sp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:id="@+id/txtDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                tools:ignore="RtlHardcoded" />

            <View
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@android:color/darker_gray"/>
            <TextView
                android:textSize="18sp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#1C1C1C"
                android:text="Ratings and Reviews"
                tools:ignore="RtlHardcoded"/>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/thanksView"
                android:layout_width="match_parent"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_55sdp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/btnok"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_check_black_24dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thanks For Your Feedback"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/writeReview"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Write your Review"
                    android:textSize="15sp"/>
                <RatingBar
                    android:numStars = "5"
                    android:stepSize="0.5"
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/submitreview"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/submitrating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"/>
                    <EditText
                        android:id="@+id/txtReview"
                        android:hint="Description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"/>

                    <Button
                        android:id="@+id/btnSubmitReview"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bgreview"
                        android:text="Submit Review"
                        android:textColor="#FFFF"
                        />
                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/userReviewView"
                android:layout_margin="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/myImageView"
                            android:layout_width="25sp"
                            android:layout_height="25sp"
                            android:src="@drawable/bgusername" />

                        <TextView

                            android:id="@+id/userTextImage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/myImageView"
                            android:layout_alignTop="@+id/myImageView"
                            android:layout_alignRight="@+id/myImageView"
                            android:layout_alignBottom="@+id/myImageView"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:text="A"
                            android:paddingBottom="2dp"
                            android:textColor="#FFFF" />
                    </RelativeLayout>


                    <TextView
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ABC ABC"
                        android:textSize="15sp"
                        android:textColor="#0F0F0F"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RatingBar
                        android:layout_gravity="center"
                        android:numStars="5"
                        android:rating="3"
                        android:id="@+id/userRatingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/userRating"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="3.00"
                        android:textColor="@color/colorAccent"
                        android:textAlignment="center"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"/>
                </LinearLayout>

                <TextView
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:id="@+id/userReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"/>


            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvReviews"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:layout_marginBottom="@dimen/_55sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:id="@+id/btnAddToCart"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFF"
            android:text="ADD TO CART"
            android:textColor="#000000"
            />
        <Button
            android:id="@+id/btnBuyNow"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bgbuynow"
            android:text="BUY NOW"
            android:textColor="#FFFF"
           />
    </LinearLayout>


    <com.andremion.counterfab.CounterFab
        android:id="@+id/fab"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:clickable="true"
        android:tint="@android:color/white"
        app:srcCompat="@drawable/ic_add_shopping_cart_black_24dp"
        tools:ignore="VectorDrawableCompat" />

    <com.andremion.counterfab.CounterFab
        android:id="@+id/fab2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="@dimen/_50sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:clickable="true"
        android:tint="@android:color/white"
        app:srcCompat="@drawable/train"
        tools:ignore="VectorDrawableCompat" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>