<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaceOrderActivity">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/loadFirst"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/wave"/>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rvCartProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:layout_above="@+id/layout"/>


    <LinearLayout

        android:id="@+id/layout"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <CheckBox
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/redeempoints"
            android:onClick="redeempoints"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Redeem points" />

        <LinearLayout
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:visibility="gone"
                android:layout_weight="1"
                android:id="@+id/viewdetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/productstotal"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cart Total 150 "/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"/>
                <TextView
                    android:id="@+id/txtDeliveryCharges"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Charges 150 "/>
            </LinearLayout>

            <TextView
                android:layout_weight="1"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:textSize="@dimen/_15sdp"
                android:textColor="#000000"
                android:id="@+id/txtTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total 600 Rs." />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/viewHomeDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp">
            <TextView
                android:id="@+id/txtFreeAbove"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delivery Charges 150 "/>

            <EditText
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/txtAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Address"/>

        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spice Level"/>

        <LinearLayout
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/rgSpiceLevel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:onClick="rbclickspicy"
                    android:id="@+id/rdoLow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Low" />

                <RadioButton
                    android:onClick="rbclickspicy"
                    android:id="@+id/rdoMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium" />

                <RadioButton
                    android:onClick="rbclickspicy"
                    android:id="@+id/rdoSpicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spicy" />

                <RadioButton
                    android:onClick="rbclickspicy"
                    android:id="@+id/rdoExtraSpicy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Extra Spicy" />
            </RadioGroup>
        </LinearLayout>

        <EditText
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/txtInstructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Add Instructions"/>

        <LinearLayout
            android:id="@+id/viewPickup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_gravity="center">
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/callaction"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:src="@drawable/ic_local_phone_black_24dp"/>
                    <TextView
                        android:id="@+id/txtSupport"
                        android:textColor="#6ab04c"
                        android:textSize="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91 8600451359"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <TextView
                        android:textColor="#6ab04c"
                        android:textSize="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pickup at : "/>

                    <TextView
                        android:id="@+id/txtPickup"
                        android:textColor="#6ab04c"
                        android:textSize="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91 8600451359"/>
                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView

                android:id="@+id/pickUpLocation"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40sdp"
                app:cardElevation="2dp"
                app:cardCornerRadius="5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/mappin" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <RadioGroup
            android:paddingLeft="@dimen/_70sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rgroup"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_2sdp">

            <RadioButton
                android:layout_weight="1"
                android:id="@+id/rdoHome"
                android:onClick="rbclick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home Delivery"
                android:checked="false"/>

            <RadioButton
                android:checked="true"
                android:layout_weight="1"
                android:id="@+id/rdoPickup"
                android:onClick="rbclick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pick Up" />

        </RadioGroup>





        <androidx.cardview.widget.CardView
            android:id="@+id/btnCOD"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            app:cardElevation="2dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp">
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal" >
                <TextView
                    android:textColor="#333333"
                    android:textSize="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROCEED WITH COD"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/btnGooglePay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            app:cardElevation="2dp"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp">

        <LinearLayout
         android:layout_gravity="center"
         android:layout_width="wrap_content"
         android:layout_height="match_parent"
         android:orientation="horizontal" >
    <TextView
        android:textColor="#333333"
        android:textSize="@dimen/_12sdp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="PROCEED WITH - UPI / CARD / NET BANKING / WALLET"/>

    </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>